  "private": false,
  "scripts": {
    "db:reset": "docker-compose run api rails db:reset",
    "frontend": "cd ./frontend && yarn && yarn serve ",
    "backend": "yarn db:reset && docker-compose run --service-ports api /bin/sh -c 'rm -f tmp/pids/server.pid && rails s -b 0.0.0.0'",
    "cleanup": "docker-compose down -v",
    "db:seed": "docker-compose run api rails db:seed",
    "project": "yarn db:reset && docker-compose up"
  }
}
