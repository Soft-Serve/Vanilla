{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@base": ["src/components/BaseComponents/"],
      "@graphql": ["src/graphql/*"],
      "@context": ["src/context/"],
      "@hooks": ["src/hooks/"],
      "@views": ["src/views/*"],
      "@presentational": [
        "src/components/BaseComponents/PresentationalComponents/*"
      ]
    }
  },
  "include": ["src"]
}
